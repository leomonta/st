{
	"compiler": {
		"compiler_style": "gcc",
		"compiler_exe": "gcc",
		"linker_exe": "gcc"
	},
	
	"directories": {
		"project_dir": ".",
		"exe_path_name": "bin/st",
		"include_dirs": [
			"include",
			"/usr/include/freetype2",
			"/usr/include/libpng16",
			"/usr/include/harfbuzz",
			"/usr/include/glib-2.0",
			"/usr/lib/glib-2.0/include",
			"/usr/include/sysprof-4"
		],
		"source_dirs": [
			"src"
		],
		"temp_dir": "obj"
	},

	"default" :{
		"libraries_names": [
			"m",
			"rt",
			"X11",
			"util",
			"Xft",
			"Xrender",
			"fontconfig",
			"freetype",
			"gd",
			"harfbuzz"
		],
		"scripts": {
			"pre": "setup.sh"
		}
	},

	"debug": {
		"compiler_args": "-g3 -Og -DVERSION=\"0.9.2-LM-debug\" -DICON=\"/usr/share/icons/st.png\" -Wno-missing-field-initializers -fsanitize=address -fsanitize=leak -fanalyzer",
		"linker_args": "-fsanitize=address -fsanitize=leak"
	},

	"release": {
		"compiler_args": "-DVERSION=\"0.9.2-LM\" -DICON=\"/usr/share/icons/st.png\" -D_XOPEN_SOURCE=600 -Ofast",
		"linker_args": "-flto",
		"scripts": {
			"post": "install.sh"
		}
	}
}
